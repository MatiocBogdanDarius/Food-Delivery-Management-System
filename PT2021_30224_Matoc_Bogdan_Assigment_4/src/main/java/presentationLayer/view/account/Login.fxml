<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="500.0" prefWidth="850.0" stylesheets="@../../../../resources/style.css"
            xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="presentationLayer.controller.sceneControllers.account.LoginController">
    <children>
        <AnchorPane layoutX="400.0" prefHeight="500.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Pane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="50.0"
                      AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="100.0">
                    <children>
                        <Label fx:id="errorLabel" layoutX="50.0" layoutY="20.0" prefHeight="40.0" prefWidth="200.0"
                               text="Email Or Password is incorrect!"/>
                        <Button fx:id="loginButton" layoutX="75.0" layoutY="170.0" mnemonicParsing="false"
                                prefHeight="50.0" prefWidth="150.0" text="Login"/>
                        <PasswordField fx:id="passwordField" layoutX="50.0" layoutY="125.0" maxHeight="-Infinity"
                                       maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0"
                                       prefWidth="200.0" promptText="Pasword"/>
                        <TextField fx:id="emailTextField" layoutX="50.0" layoutY="70.0" maxHeight="-Infinity"
                                   maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0"
                                   prefWidth="200.0" promptText="Email"/>
                        <Button fx:id="createNewAccountButton" layoutX="75.0" layoutY="240.0" mnemonicParsing="false"
                                prefHeight="50.0" prefWidth="150.0" text="Create new Account"/>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
        <Label fx:id="welcomeLabel" alignment="CENTER" layoutX="174.0" layoutY="163.0" prefHeight="164.0"
               prefWidth="339.0" text="WELCOME" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="410.0">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="30.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
